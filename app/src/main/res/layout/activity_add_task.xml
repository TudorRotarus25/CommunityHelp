<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.AddTaskActivity">


    <EditText
        android:hint="Task title"
        android:inputType="text"
        android:id="@+id/task_title_editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/task_category_spinner">
    </Spinner>

    <EditText
        android:hint="Task description"
        android:inputType="text"
        android:id="@+id/task_description_editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <EditText
        android:hint="Location"
        android:inputType="text"
        android:id="@+id/task_location_editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/task_start_time_label_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Task start time:"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/task_start_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/task_start_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <TextView
        android:id="@+id/task_end_time_label_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Task end time:"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/task_end_time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/task_end_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <EditText
        android:hint="Task reward"
        android:inputType="text"
        android:id="@+id/task_reward_cost_editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/task_post_button"
        android:text="Post Task"
        />

</LinearLayout>