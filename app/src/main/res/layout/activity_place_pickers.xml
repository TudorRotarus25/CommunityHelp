<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.unibuc.communityhelpv3.activities.PlacePickersActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/activity_place_pickers_title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/activity_place_pickers_instruct"
        android:textSize="@dimen/text_big"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_place_pickers_location1_name_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/text_big"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Home location"/>

        <TextView
            android:id="@+id/activity_place_pickers_location1_picker_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:textAlignment="center"
            android:textSize="@dimen/text_big"
            android:text="Select the location of your home community"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_place_pickers_location2_name_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/text_big"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Work location"/>

        <TextView
            android:id="@+id/activity_place_pickers_location2_picker_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:textSize="@dimen/text_big"
            android:textAlignment="center"
            android:text="Select the location of your work community"/>

    </LinearLayout>

    <Button
        android:id="@+id/activity_place_pickers_continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/follow_button_shape"
        android:text="Continue"/>

</LinearLayout>
