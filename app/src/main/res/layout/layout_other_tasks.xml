<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_my_task_cardView_margin"
    android:layout_marginBottom="@dimen/layout_my_task_cardView_margin"
    android:layout_marginLeft="@dimen/layout_my_task_cardView_margin"
    android:layout_marginRight="@dimen/layout_my_task_cardView_margin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layout_my_task_horizontal_padding"
        android:paddingRight="@dimen/layout_my_task_horizontal_padding"
        android:paddingTop="@dimen/layout_my_task_vertical_padding"
        android:paddingBottom="@dimen/layout_my_task_vertical_padding"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/layout_other_tasks_cardView_padding_vertical"
            android:paddingBottom="@dimen/layout_other_tasks_cardView_padding_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="?android:selectableItemBackground">

            <ImageView android:id="@+id/layout_other_tasks_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/layout_my_tasks_inner_margin_horizontal"
                android:paddingRight="@dimen/layout_my_tasks_inner_margin_horizontal"
                android:layout_weight="1"
                android:src="@drawable/ic_shopping_cart_black_48dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView android:id="@+id/layout_other_tasks_title_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_other_tasks_inner_margin_vertical"
                    android:layout_marginBottom="@dimen/layout_other_tasks_inner_margin_vertical"
                    android:text="Activity title"
                    android:textSize="@dimen/layout_other_tasks_title_text_size"
                    android:maxLines="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_other_tasks_inner_margin_vertical"
                    android:layout_marginBottom="@dimen/layout_other_tasks_inner_margin_vertical"
                    android:orientation="horizontal">

                    <TextView android:id="@+id/layout_other_tasks_username_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="Username"/>

                    <TextView android:id="@+id/layout_other_tasks_date_textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:text="21 Mar, 21:33"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center">

                <TextView android:id="@+id/layout_other_tasks_duration_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_other_tasks_inner_margin_vertical"
                    android:layout_marginBottom="@dimen/layout_other_tasks_inner_margin_vertical"
                    android:textSize="@dimen/layout_other_tasks_right_container_text_size"
                    android:text="20m"
                    android:drawableRight="@drawable/ic_hourglass_empty_black_18dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_other_tasks_inner_margin_vertical"
                    android:layout_marginBottom="@dimen/layout_other_tasks_inner_margin_vertical"
                    android:orientation="horizontal">

                    <TextView android:id="@+id/layout_other_tasks_participants_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textSize="@dimen/layout_other_tasks_right_container_text_size"
                        android:text="0/1"
                        android:drawableRight="@drawable/ic_person_black_18dp"/>

                    <TextView android:id="@+id/layout_other_tasks_reward_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="@dimen/layout_other_tasks_right_container_text_size"
                        android:text="6"
                        android:drawableRight="@drawable/ic_star_black_18dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>